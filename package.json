{
  "name": "my-portfolio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "ajv": "^8.17.1",
    "axios": "^1.7.7",
    "i18next": "^25.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.0.0",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.26.2",
    "react-scripts": "^5.0.1",
    "react-scroll": "^1.9.0",
    "styled-components": "^6.1.13",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "node scripts/fetchProjects.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
  "test:node": "jest --config=jest.node.config.js --runInBand --testPathPattern=src/__tests__",
    "test:cra": "react-scripts test --runInBand --watchAll=false",
    "test:all": "npm run test:node && npm run test:cra",
  "test:ci": "cross-env CI=true npm run test:node && cross-env CI=true npm run test:cra",
    "test:helpers": "react-scripts test --testPathPattern=src/__tests__/fetchHelpers --watchAll=false",
    "audit:ci": "node scripts/audit-check.js",
    "eject": "react-scripts eject",
    "docs:jsdoc": "jsdoc -c jsdoc.json"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^react-dom/test-utils$": "<rootDir>/config/jest/react-dom-test-utils.js",
      "^react-dom/cjs/.*react-dom-test-utils.*$": "<rootDir>/config/jest/react-dom-test-utils.js"
    }
  },
  "overrides": {
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.3",
    "nth-check": "^2.0.1",
    "postcss": "^8.4.31",
    "svgo": "^2.8.0",
    "resolve-url-loader": "^4.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
 
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "cross-env": "^7.0.3",
    "jsdoc": "^4.0.2",
    "node-fetch": "^2.7.0",
    "remark": "^14.0.3",
    "remark-parse": "^10.0.1"
  }
}
